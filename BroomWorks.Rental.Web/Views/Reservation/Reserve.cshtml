@using BroomWorks.Rental.Web.Models.Reservation
@model ReserveModel

@if (Model.Reservation != null)
{
    <h2>Registreering õnnestus luuale @Model.Reservation.Broom.RegistrationNumber</h2>
}
else
{
    <form method="post" asp-action="Reserve">
        <h2>Reserveeri luud @Model.Broom.RegistrationNumber</h2>
        <div>
            <button class="btn btn-primary">Reserveeri</button>
        </div>
    </form>
}